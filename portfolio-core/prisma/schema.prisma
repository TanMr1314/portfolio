// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Project {
  id          String   @id @default(cuid())
  title       String
  description String?
  category    String   // "ToB", "App", "Web", "AI", "GD"
  coverImage  String
  images      String   // JSON array of image paths
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model WorkExperience {
  id          String   @id @default(cuid())
  company     String
  position    String
  period      String
  description String
  highlights  String   // JSON array of highlights
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model PersonalInfo {
  id          String   @id @default(cuid())
  bio         String   // 个人简介（多段落用换行分隔）
  email       String   // 邮箱
  wechat      String   // 微信
  updatedAt   DateTime @updatedAt
}

model Skill {
  id        String   @id @default(cuid())
  name      String
  level     Int      // 0-100
  order     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
